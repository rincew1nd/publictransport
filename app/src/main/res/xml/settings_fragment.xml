<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Настройки">

        <ListPreference
            android:key="map_type"
            android:title="Тип карты"
            android:entries="@array/map_types"
            android:entryValues="@array/map_types_values"
            android:dialogTitle="Выберите тип" />

        <EditTextPreference
            android:key="algorithm_depth"
            android:numeric="integer"
            android:text="Глубина поиска"
            android:dialogTitle="Изменить глубину поиска" />
    </PreferenceCategory>

</PreferenceScreen>